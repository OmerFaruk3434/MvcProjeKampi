@using EntityLayer.Concrete
@using PagedList;
@using PagedList.Mvc;
@model PagedList.IPagedList<Heading>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@{ string color = "";}
<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="col-sm-12 badge badge-dark">
            <h1>Başlıklar Listesi</h1>
            <a href="/Heading/AddHeading" class="btn btn-info col-12">Başlık Ekle</a>
        </div>
        <div class="card">
            <div class="card-header">
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="card-body p-0">
                <table class="table table-striped projects">
                    <thead>
                        <tr>
                            <th style="width: 20%">
                                Başlık Adı
                            </th>
                            <th style="width: 15%">
                                Oluşturan Yazar
                            </th>
                            <th style="width: 10%">
                                Durum
                            </th>
                            <th style="width: 8%" class="text-center">
                                Kategori
                            </th>
                            <th style="width: 20%">
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            if (item.Category.CategoryName == "Web Developer")
                            {
                                color = "badge badge-warning";
                            }
                            if (item.Category.CategoryName == "Mobil Developer")
                            {
                                color = "badge badge-success";
                            }
                            if (item.Category.CategoryName == "Cyber Security")
                            {
                                color = "badge badge-danger";
                            }
                            <tr>
                                <td>
                                    <a>
                                        @item.HeadingName
                                    </a>
                                    <br />
                                    <small>
                                        @(((DateTime)item.HeadingDate).ToString("dd-MMM-yyyy"))
                                    </small>
                                </td>
                                <td>
                                    <ul class="list-inline">
                                        <li class="list-inline-item">

                                            <img style=" border-radius: 50%; height: 60px; width: 60px; object-fit: cover;" alt="Avatar" class="table-avatar" src="@item.Writer.WriterImage">&nbsp;&nbsp;<b>@item.Writer.WriterName @item.Writer.WriterSurName</b>
                                        </li>
                                    </ul>
                                </td>
                                <td>
                                    @if (item.HeadingStatus == true)
                                    {
                                        <p style="color:lawngreen">@item.HeadingStatus</p>
                                    }
                                    else
                                    {
                                        <p style="color:red">@item.HeadingStatus</p>
                                    }
                                </td>
                                <td class="project-state">
                                    <span class="@color">@item.Category.CategoryName</span>
                                </td>
                                <td class="project-actions text-right">
                                    <a class="btn btn-primary btn-sm" href="/Content/ContentByHeading/@item.HeadingID">
                                        <i class="fas fa-folder">
                                        </i>
                                        Yazılar
                                    </a>
                                    <a class="btn btn-info btn-sm" href="/Heading/EditHeading/@item.HeadingID">
                                        <i class="fas fa-pencil-alt">
                                        </i>
                                        Düzenle
                                    </a>
                                    @if (item.HeadingStatus == true)
                                    {
                                        <a class="btn btn-danger btn-sm" href="/Heading/DeleteHeading/@item.HeadingID">
                                            <i class="fas fa-trash">
                                            </i>
                                            Pasif Yap
                                        </a>
                                    }
                                    else
                                    {
                                        <a class="btn btn-danger btn-sm" href="/Heading/DeleteHeading/@item.HeadingID">
                                            <i class="fas fa-trash">
                                            </i>
                                            Aktif Yap
                                        </a>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </section>
    <div style="display: flex; justify-content: center; margin-top: 7px;">
        @Html.PagedListPager((IPagedList)Model, p => Url.Action("Index", new { p }), new PagedListRenderOptions
           {
               LiElementClasses = new List<string>
               { "page-link"}
           })
    </div><br />
</body>
</html>